<div id="doctor_lists">
  <table class= "table table-bordered">
    <thead>
      <tr>
        <th>Profile_pic</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Gender</th>
        <th>City</th>
        <th>State</th>
        <th>Contact no</th>
        <th>Practice from</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody >
      <% doctors.each do |doctor| %>
        <tr>
          <td><%= image_tag doctor.profile_picture, :size => "100x100"  %></td>
          <td><%= doctor.firstname %></td>
          <td><%= doctor.lastname %></td>
          <td><%= doctor.gender %></td>
          <td><%= doctor.city %></td>
          <td><%= doctor.state %></td>
          <td><%= doctor.contact_no %></td>
          <td><%= doctor.practice_from %></td>
          <td><%= link_to 'Show', doctor %></td>
          <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
          <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "delete_doctor" %></td>
          <%if doctor.patients.present?%>
            <td><%= link_to 'Patients', all_patient_list_doctor_path(doctor)%></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Doctor', new_doctor_path, class: "btn btn-primary", remote: true, :id => "new_doctor" %>
</div>
<br>
