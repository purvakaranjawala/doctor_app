
<h3>Patients</h3>

<table class= "table table-bordered">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Gender</th>
      <th>City</th>
      <th>State</th>
      <th>Contact no</th>
      <th>Age</th>
      <th>Dob</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= fullname(patient)%></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.city %></td>
        <td><%= patient.state %></td>
        <td><%= patient.contact_no %></td>
        <td><%= age(patient.dob) %></td>
        <td><%= patient.dob %></td>
        <td><%= link_to 'Show Disease Information',show_disease_info_list_patient_path(patient)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
